# 顶层配置，表示这是最顶层的配置文件，不需要继续向上查找
root = true

# 对所有文件生效的配置
[*]
charset = utf-8                  # 字符集
end_of_line = lf                 # 换行符类型 (lf, crlf, cr)
indent_style = space             # 缩进类型 (space, tab)
indent_size = 4                  # 缩进大小
trim_trailing_whitespace = true  # 是否删除行尾空格
insert_final_newline = true      # 是否在文件末尾插入空行